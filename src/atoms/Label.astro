---
interface Props {
  title: string;
  color?: string;
}

const { title, color = "primary" } = Astro.props;
let textColor: string;
let labelColor: string;

switch (color) {
  case "red":
    textColor = "text-white";
    labelColor = "bg-alert";
    break;
  default:
    textColor = "text-white";
    labelColor = "bg-primary";
}
---

<label class=`text-[10px] font-bold px-2 py-0.5 rounded-sm ${textColor} ${labelColor}`>
  {title}
</label>
