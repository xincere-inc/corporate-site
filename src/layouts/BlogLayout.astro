---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Aside from "../components/Aside.astro";
import MobileHeader from "../components/MobileHeader.astro";
import Recruitment from "../components/Recruitment.astro";
import Label from "../atoms/Label.astro";

const { frontmatter } = Astro.props;

const oneWeekBefore = new Date(new Date().setHours(0, 0, 0, 0));
oneWeekBefore.setDate(oneWeekBefore.getDate() - 7);

const publishedDate = new Date(frontmatter.date);
const baseUrl = import.meta.env.HOST;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="og:image" content={`${baseUrl}/images/og_image.png`} />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-F33V17FPK8"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-F33V17FPK8");
    </script>

    <title>{frontmatter.title} - 株式会社シンシアテックブログ</title>
  </head>
  <body x-data="{ mobileSidebar: false }">
    <Header />
    <MobileHeader />
    <div class="md:flex md:m-auto container mx-auto md:px-10 md:my-20 mt-20">
      <main class="pb-4 md:px-0 px-5 md:w-[calc(100%-20rem)]">
        <p class="text-description text-sm">
          {publishedDate.toISOString().split("T")[0].replace(/-/g, ".")}
        </p>
        <h1 class="text-h2 font-bold text-primary">{frontmatter.title}</h1>
        <div class="flex space-x-2 mb-1 truncate">
          {
            oneWeekBefore < publishedDate ? (
              <Label title="NEW" color="red" />
            ) : null
          }
          {
            frontmatter.tags
              .split(",")
              .map((item: string) => <Label title={item} />)
          }
        </div>
        <div class="blog-content">
          <slot />
        </div>
      </main>
      <Aside />
    </div>
    <Recruitment />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
  }
  html {
    font-family: system-ui, sans-serif;
  }
  code {
  }
  [x-cloak] {
    display: none;
  }

  .blog-content > h2 {
    color: #518c3c;
    font-size: 22px;
    font-weight: 700;
    line-height: 28px;
    margin: 16px 0;
    letter-spacing: 0px;
  }
  .blog-content > p {
    line-height: 20px;
  }

  .blog-content > ul {
    margin-left: 8px;
    margin-top: 20px;
    margin-bottom: 20px;
  }

  .blog-content > ul > li {
    list-style-type: none; /*点を非表示*/
    position: relative; /*基準位置*/
    padding-left: 1em;
  }
  .blog-content > ul > li:before {
    border-radius: 50%; /*丸くする*/
    width: 5px; /*点の幅*/
    height: 5px; /*点の高さ*/
    display: block;
    position: absolute; /*絶対配置*/
    left: 0; /*点の位置*/
    top: 0.6em; /*点の位置*/
    content: "";
    background: #518c3c; /*点の色*/
  }
</style>
